{
  "manifest_version": 3,
  "name": "Hydration Buddy",
  "version": "1.0",
  "description": "Reminds you to drink water regularly with a customizable timer, sounds, themes, and tips.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "notifications", "alarms"],
  "icons": {
    "128": "icons/icon.png"
  }
}
